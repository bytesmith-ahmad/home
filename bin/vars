#!/bin/bash

awk '/^# VARIABLES/,/^# ALIASES/' ~/bin/.config | \
grep -v '^#' | \
grep -v '^$' | \
sed 's/export //' | \
while IFS='=' read -r var_name var_value; do
    # Set color for variable name and value
    var_color='\033[1;34m'  # blue for variable name
    val_color='\033[0;32m'  # green for variable value
    reset_color='\033[0m'    # reset color

    # Print variable name and value with color
    printf "${var_color}%-20s${reset_color} ${val_color}%s${reset_color}\n" "$var_name" "$var_value"
done
