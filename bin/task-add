#!/bin/bash

task_dir="$HOME/.task"

task add "$@"
git -C $task_dir add .
git -C $task_dir commit -m "added task" >> "$HOME/.task/git.log"
git -C $task_dir push 2> "$HOME/.task/error.log"
git -C $HOME add .task
git -C $HOME commit -m "[autocommit] .task update"
git -C $HOME push 2>> "$HOME/.task/error.log"
task last_insert
