#!/bin/bash

yellow="\e[93m"
_0="\e[0m"
separator="********************************************************************************"

echo -e "${yellow}ARCH $separator${_0}"
git -C "$HOME/arch" status

echo -e "\e[93mHOME $separator${_0}"
git -C "$HOME" status

echo -e "\e[93mTASK $separator${_0}"
git -C "$HOME/.task" status

echo -e "\e[93mPASS $separator${_0}"
pass git status
