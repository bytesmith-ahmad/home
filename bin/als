#!/bin/bash

awk '/^# ALIASES/{flag=1; next} flag' ~/bin/.config | \
grep -v '^#' | \
grep -v '^$' | \
sed 's/alias //' | \
while IFS='=' read -r alias_name alias_value; do
    # Set color for alias name and value
    alias_color='\033[1;35m'  # magenta for alias name
    val_color='\033[0;32m'    # green for alias value
    reset_color='\033[0m'     # reset color

    # Print alias name and value with color
    printf "${alias_color}%-20s${reset_color} ${val_color}%s${reset_color}\n" "$alias_name" "$alias_value"
done
